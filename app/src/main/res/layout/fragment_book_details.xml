<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/book_details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16sp"
                    android:text="No title found"
                    android:textColor="?attr/colorAccent"
                    android:textSize="24sp"
                    android:textStyle="italic" />

                <ImageButton
                    android:id="@+id/book_details_favorite_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="?attr/android:colorBackground"
                    android:contentDescription="Add to favorites"
                    android:paddingTop="12sp"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:transformPivotX="48dp"
                    android:transformPivotY="48dp"
                    app:srcCompat="@drawable/favorite" />

            </LinearLayout>

            <TextView
                android:id="@+id/book_details_authors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6sp"
                android:text="No authors found"
                android:textColor="?attr/colorAccent"
                android:textSize="14sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/book_details_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:contentDescription="No cover image found"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/no_cover_image_found" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="12sp">

                    <TextView
                        android:id="@+id/book_details_publisher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No publisher found"
                        android:textColor="?attr/colorAccent"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/book_details_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No publication date found"
                        android:textColor="?attr/colorAccent"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/book_details_isbn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No ISBN found"
                        android:textColor="?attr/colorAccent"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/book_details_length_words"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No word count found"
                        android:textColor="?attr/colorAccent"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/book_details_length_pages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No page count found"
                        android:textColor="?attr/colorAccent"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/book_details_length_chapters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No chapter count found"
                        android:textColor="?attr/colorAccent"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/book_details_genres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No genres found"
                        android:textColor="?attr/colorAccent"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nDescription:"
                android:textColor="?attr/colorOnBackground"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/book_details_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    No description found"
                android:textColor="?attr/colorAccent"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/book_details_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nNo price found"
                android:textColor="?attr/colorAccent"
                android:textSize="24sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/book_details_review_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nThis book has no reviews"
                android:textColor="?attr/colorAccent"
                android:textSize="24sp"
                android:textStyle="italic" />

            <RatingBar
                android:id="@+id/book_details_avg_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="?attr/colorPrimary"
                android:rating="0"
                android:stepSize="0.01" />

            <Button
                android:id="@+id/book_details_leave_review_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14sp"
                android:text="Add Review"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="14sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/book_details_user_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14sp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your review:"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="24sp" />

                <RatingBar
                    android:id="@+id/book_details_user_rating"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressTint="?attr/colorPrimary"
                    android:rating="0"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/book_details_user_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    This review has no contents"
                    android:textColor="?attr/colorAccent"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/book_details_edit_review_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14sp"
                        android:text="Edit"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/book_details_delete_review_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/book_details_see_reviews_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14sp"
                android:text="See All Reviews"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>