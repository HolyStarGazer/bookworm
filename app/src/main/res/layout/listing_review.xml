<?xml version="1.0" encoding="utf-8"?>
<view class="edu.utsa.cs3773.bookworm.ui.ReviewListingView" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/review_listing_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:paddingTop="16sp"
            android:text="username"
            android:textColor="?attr/colorOnBackground"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/review_listing_dropdown_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="?attr/android:colorBackground"
            android:contentDescription="Admin actions"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:transformPivotX="48dp"
            android:transformPivotY="42dp"
            app:srcCompat="@drawable/dropdown_button" />
    </LinearLayout>

    <RatingBar
        android:id="@+id/review_listing_rating"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:progressBackgroundTint="?attr/colorSecondaryVariant"
        android:progressBackgroundTintMode="multiply"
        android:progressTint="?attr/colorPrimary"
        android:rating="0"
        android:stepSize="1" />

    <TextView
        android:id="@+id/review_listing_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    This review has no contents"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp"
        android:textStyle="italic" />

</view>