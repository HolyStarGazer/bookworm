<?xml version="1.0" encoding="utf-8"?>
<view xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    class="edu.utsa.cs3773.bookworm.ui.BookListingView"
    android:id="@+id/book_listing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6sp"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/book_listing_cover_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:adjustViewBounds="true"
        android:contentDescription="No cover image found"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/no_cover_image_found" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="6sp">


        <TextView
            android:id="@+id/book_listing_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No title found"
            android:textColor="?attr/colorAccent"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/book_listing_authors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="No authors found"
            android:textColor="?attr/colorAccent"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/book_listing_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="No publisher found"
            android:textColor="?attr/colorAccent"
            android:textSize="14sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/book_listing_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="No ISBN found"
                android:textColor="?attr/colorAccent"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/book_listing_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="No date found"
                android:textAlignment="textEnd"
                android:textColor="?attr/colorAccent"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/book_listing_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="No genres found"
            android:textColor="?attr/colorAccent"
            android:textSize="14sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/book_listing_length_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="No word count, "
                android:textColor="?attr/colorAccent"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/book_listing_length_pages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="no page count, "
                android:textColor="?attr/colorAccent"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/book_listing_length_chapters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="no chapter count"
                android:textColor="?attr/colorAccent"
                android:textSize="14sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/book_listing_avg_rating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:numStars="5"
                android:progressBackgroundTint="?attr/colorSecondaryVariant"
                android:progressBackgroundTintMode="multiply"
                android:progressTint="?attr/colorPrimary"
                android:rating="0"
                android:stepSize="0.01" />

            <TextView
                android:id="@+id/book_listing_review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=" - no reviews"
                android:textColor="?attr/colorAccent"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/book_listing_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="No price found"
                android:textAlignment="textEnd"
                android:textColor="?attr/colorAccent"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>
</view>