<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/change_password_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingHorizontal="12sp"
        android:text="&lt;"
        android:textColor="?attr/colorOnBackground"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:minHeight="48dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change password"
            android:textAlignment="textStart"
            android:textColor="?attr/colorOnBackground"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n\nOld password:"
            android:textColor="?attr/colorOnBackground"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/change_password_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Old password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="?attr/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/change_password_old_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incorrect password"
            android:textColor="?attr/colorError"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New password:"
            android:textColor="?attr/colorOnBackground"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/change_password_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="New password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="?attr/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/change_password_new_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invalid password"
            android:textColor="?attr/colorError"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm new password:"
            android:textColor="?attr/colorOnBackground"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/change_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="New password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="?attr/colorOnSecondary"
            android:textColorHint="?attr/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/change_password_confirm_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmation does not match\nnew password"
            android:textColor="?attr/colorError"
            android:textSize="14sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/change_password_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>